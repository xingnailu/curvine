<!-- Example of the curvine hdfs filesystem configuration file -->
<configuration>
    <property>
        <name>fs.defaultFS</name>
        <value>cv://default</value>
    </property>

    <property>
        <name>fs.cv.impl</name>
        <value>io.curvine.CurvineFileSystem</value>
    </property>

    <property>
        <name>fs.cv.default.master_addrs</name>
        <value>cv-master-0.svc.cluster.local:8995,cv-master-1.svc.cluster.local:8995,cv-master-2.svc.cluster.local:8995</value>
    </property>

    <property>
        <name>fs.cv.short_circuit</name>
        <value>true</value>
    </property>

    <property>
        <name>fs.cv.storage_type</name>
        <value>MEM</value>
    </property>

    <property>
        <name>fs.cv.replicas</name>
        <value>1</value>
    </property>

    <property>
        <name>fs.cv.log_level</name>
        <value>info</value>
    </property>

    <property>
        <name>fs.cv.log_dir</name>
        <value>stderr</value>
    </property>

    <property>
        <name>fs.cv.log_file_name</name>
        <value>curvine.log</value>
    </property>

    <property>
        <name>fs.cv.max_log_files</name>
        <value>3</value>
    </property>

    <property>
        <name>io.file.buffer.size</name>
        <value>131072</value>
    </property>

</configuration>